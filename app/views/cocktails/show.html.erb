<div class="container">
  <div class="card-show mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)) %>') ">
    <h2><%= @cocktail.name %></h2>
  </div>
</div>

<div class="container mt-4">
  <h4>Description and ingredient</h4>
  <% @doses.each do |dose| %>
    <p><%= dose.description %> - <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    </p>
  <% end %>

  <%= link_to "Main menu", root_path, class: "btn btn-flat" %>
  <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-flat" %>
</div>
